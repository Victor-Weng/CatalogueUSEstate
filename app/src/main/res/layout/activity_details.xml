<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="349dp">

            <ImageView
                android:id="@+id/primaryphotoID_details"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@android:color/background_dark" />

            <TextView
                android:id="@+id/listpriceID_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="167dp"
                android:layout_marginTop="12dp"
                android:layout_marginEnd="178dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="List Price"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/AddressID_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="167dp"
                android:layout_marginTop="39dp"
                android:layout_marginEnd="177dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="line"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/statusID_details"
                android:layout_width="128dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="168dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="64dp"
                android:layout_marginEnd="115dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="status"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bathID_details"
                android:layout_width="128dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="168dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="116dp"
                android:layout_marginEnd="115dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="bath"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/last_priceID_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="168dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="144dp"
                android:layout_marginEnd="176dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="last_price"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storiesID_details"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="167dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="172dp"
                android:layout_marginEnd="177dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="stories"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noise_scoreID_details"
                android:layout_width="128dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="167dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="200dp"
                android:layout_marginEnd="116dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="noise score"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/bedID_details"
                android:layout_width="128dp"
                android:layout_height="20dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="168dp"
                android:layout_marginLeft="11dp"
                android:layout_marginTop="92dp"
                android:layout_marginEnd="115dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="bed"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>