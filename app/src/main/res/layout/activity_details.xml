<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activities.DetailsActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="300dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="349dp">

            <ImageView
                android:id="@+id/primaryphotoID_details"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginStart="7dp"
                android:layout_marginTop="7dp"
                android:layout_marginBottom="7dp"
                android:background="@android:color/background_dark" />

            <TextView
                android:id="@+id/display_property_typeID_details"
                android:layout_width="217dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="169dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="21dp"
                android:layout_marginEnd="25dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="property type"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/noise_scoreID_details"
                android:layout_width="215dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="170dp"
                android:layout_marginLeft="13dp"
                android:layout_marginTop="88dp"
                android:layout_marginEnd="25dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="noise score"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/storiesID_details"
                android:layout_width="214dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_marginStart="169dp"
                android:layout_marginLeft="12dp"
                android:layout_marginTop="63dp"
                android:layout_marginEnd="28dp"
                android:layout_toRightOf="@id/primaryphotoID_details"
                android:paddingLeft="5dp"
                android:text="stories"
                android:textStyle="bold" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</androidx.constraintlayout.widget.ConstraintLayout>