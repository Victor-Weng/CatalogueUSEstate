<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="7dp">

        <ImageView
            android:id="@+id/primaryphotoID"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="7dp"
            android:layout_marginTop="7dp"
            android:layout_marginBottom="7dp"
            android:background="@android:color/background_dark" />

        <TextView
            android:id="@+id/listpriceID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/primaryphotoID"
            android:paddingLeft="5dp"
            android:text="List Price"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/addressID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/listpriceID"
            android:layout_toRightOf="@id/primaryphotoID"
            android:paddingLeft="5dp"
            android:text="Address" />

        <TextView
            android:id="@+id/statusID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/addressID"
            android:layout_toRightOf="@id/primaryphotoID"
            android:paddingLeft="5dp"
            android:text="Status" />

        <TextView
            android:id="@+id/bedID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/statusID"
            android:layout_toRightOf="@id/primaryphotoID"
            android:paddingLeft="5dp"
            android:text="Bed" />

        <TextView
            android:id="@+id/bathID"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/bedID"
            android:layout_toRightOf="@id/primaryphotoID"
            android:paddingLeft="5dp"
            android:text="Bath" />
    </RelativeLayout>
</androidx.cardview.widget.CardView>